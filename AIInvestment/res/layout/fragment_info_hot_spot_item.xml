<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/default_list_item_style"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/actionbar_margin"
    android:paddingRight="@dimen/actionbar_margin"
    android:paddingTop="16dp"
    android:paddingBottom="12dp">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/default_text_color_100"
        android:textSize="@dimen/font_size_16"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:drawablePadding="2dp"
        android:drawableLeft="@drawable/hot_spot_icon"
        android:textColor="#ffa524"
        android:textSize="@dimen/font_size_14"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/name"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/default_text_color_60"
        android:textSize="@dimen/font_size_12"/>

    <TextView
        android:id="@+id/name0"
        android:layout_marginTop="14dp"
        style="@style/hot_spot_name_text_style"
        app:layout_constraintTop_toBottomOf="@id/name"/>
    <com.sscf.investment.component.ui.widget.NumberTextView
        android:id="@+id/value0"
        style="@style/hot_spot_value_text_style"
        app:layout_constraintLeft_toRightOf="@id/name0"
        app:layout_constraintTop_toTopOf="@id/name0"/>

    <com.sscf.investment.component.ui.widget.NumberTextView
        android:id="@+id/value1"
        style="@style/hot_spot_value_text_style"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/name0"/>
    <TextView
        android:id="@+id/name1"
        style="@style/hot_spot_name_text_style"
        app:layout_constraintRight_toLeftOf="@id/value1"
        app:layout_constraintTop_toTopOf="@id/name0"/>

    <TextView
        android:id="@+id/name2"
        android:layout_marginTop="8dp"
        style="@style/hot_spot_name_text_style"
        app:layout_constraintTop_toBottomOf="@id/name0"/>
    <com.sscf.investment.component.ui.widget.NumberTextView
        android:id="@+id/value2"
        style="@style/hot_spot_value_text_style"
        app:layout_constraintLeft_toRightOf="@id/name2"
        app:layout_constraintTop_toTopOf="@id/name2"/>

    <com.sscf.investment.component.ui.widget.NumberTextView
        android:id="@+id/value3"
        style="@style/hot_spot_value_text_style"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/name2"/>
    <TextView
        android:id="@+id/name3"
        style="@style/hot_spot_name_text_style"
        app:layout_constraintRight_toLeftOf="@id/value3"
        app:layout_constraintTop_toTopOf="@id/name2"/>

</android.support.constraint.ConstraintLayout>