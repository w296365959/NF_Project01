<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/null_bg_style">
    <View
        android:id="@+id/lineTop"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/list_line_style"/>
    <View
        android:id="@+id/upBlock"
        android:layout_width="0dp"
        android:layout_height="94dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineTop"
        android:background="@color/default_content_bg"/>
    <View
        android:id="@+id/downBlock"
        android:layout_width="0dp"
        android:layout_height="41dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upBlock"
        android:background="?attr/stock_pick_down_bg"/>
    <View
        android:id="@+id/lineBottom"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/downBlock"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/list_line_style"/>
    <ImageView
        android:id="@+id/newIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/stock_pick_new_icon"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/upBlock"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:textColor="@color/default_text_color_100"
        android:textSize="@dimen/font_size_18"/>
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="@id/title"
        android:layout_marginTop="5dp"
        android:textColor="@color/default_text_color_100"
        android:textSize="@dimen/font_size_12"/>
    <TextView
        android:id="@+id/subscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/desc"
        app:layout_constraintLeft_toLeftOf="@id/title"
        android:layout_marginTop="3dp"
        android:textColor="@color/default_text_color_60"
        android:textSize="@dimen/font_size_12"/>
    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/default_text_color_60"
        app:layout_constraintLeft_toRightOf="@id/subscription"
        app:layout_constraintTop_toTopOf="@id/subscription"
        app:layout_constraintBottom_toBottomOf="@id/subscription"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:id="@+id/source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/subscription"
        app:layout_constraintLeft_toRightOf="@id/line"
        android:layout_marginLeft="12dp"
        android:textColor="@color/default_text_color_60"
        android:textSize="@dimen/font_size_12"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        app:layout_constraintBaseline_toBaselineOf="@id/subscription"
        app:layout_constraintLeft_toRightOf="@id/source"
        android:textColor="@color/default_text_color_60"
        android:textSize="@dimen/font_size_12"/>

    <View
        style="@style/list_vertical_line_style"
        android:layout_height="40dp"
        android:layout_marginRight="132dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/upBlock"
        app:layout_constraintTop_toTopOf="@id/upBlock" />

    <TextView
        android:id="@+id/button"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:background="@drawable/value_added_button_yellow_bg"
        android:textColor="@color/white_100"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintRight_toRightOf="@id/upBlock"
        app:layout_constraintTop_toTopOf="@id/upBlock"
        app:layout_constraintBottom_toBottomOf="@id/upBlock"/>

    <include
        android:id="@+id/discoverStockItem0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/discoverStockItem1"
        app:layout_constraintTop_toTopOf="@id/downBlock"
        app:layout_constraintBottom_toBottomOf="@id/downBlock"
        layout="@layout/discover_stock_pick_card_stock_item"/>
    <include
        android:id="@+id/discoverStockItem1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/discoverStockItem0"
        app:layout_constraintRight_toLeftOf="@+id/discoverStockItem2"
        app:layout_constraintTop_toTopOf="@id/downBlock"
        app:layout_constraintBottom_toBottomOf="@id/downBlock"
        layout="@layout/discover_stock_pick_card_stock_item"/>
    <include
        android:id="@+id/discoverStockItem2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/discoverStockItem1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/downBlock"
        app:layout_constraintBottom_toBottomOf="@id/downBlock"
        layout="@layout/discover_stock_pick_card_stock_item"/>
</android.support.constraint.ConstraintLayout>