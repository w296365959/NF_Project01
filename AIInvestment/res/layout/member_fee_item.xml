<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/member_fee_item_bg_selector"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/month"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/desc"
        app:layout_constraintVertical_chainStyle="packed"
        android:textSize="@dimen/font_size_16"
        android:textColor="@color/default_text_color_100"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:id="@+id/tag"
        app:layout_constraintTop_toTopOf="@id/month"
        app:layout_constraintBottom_toBottomOf="@id/month"
        app:layout_constraintLeft_toRightOf="@id/month"
        android:layout_marginLeft="6dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:gravity="center"
        android:textSize="@dimen/font_size_8"
        android:textColor="@color/default_content_bg"
        android:background="@drawable/tag_bg"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desc"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/default_text_color_60"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/month"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginTop="4dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_money"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/font_size_18"
        android:textColor="@color/total_money_color"
        android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>