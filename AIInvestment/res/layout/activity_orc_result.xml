<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/setting_bg_style">
    <include layout="@layout/actionbar_setting"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/result_panel"
            android:visibility="gone">
            <com.sscf.investment.widget.CheckableListView
                style="@style/default_list_view_style"
                android:id="@+id/list"
                android:layout_height="0px"
                android:layout_weight="1"
                android:choiceMode="multipleChoice"/>
            <com.sscf.investment.widget.BottomEditLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/bottomEditLayout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="?attr/main_bottom_tab_bar_bg_color"
                sel:right_text="@string/import_stock">
                <View
                    style="@style/list_line_style"
                    android:background="?attr/main_bottom_tab_bar_divide_line_color"/>

                <CheckedTextView
                    android:id="@+id/editSelectAll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/favor_item_padding_left_edit"
                    android:drawableLeft="@drawable/checkbox_selector"
                    android:drawablePadding="@dimen/default_drawable_padding"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/default_text_color_60"
                    android:text="@string/select_all"/>

                <TextView
                    android:id="@+id/editDeleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/actionbar_margin"
                    android:layout_gravity="right"
                    android:gravity="center_vertical"
                    android:enabled="false"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="?attr/delete_button_text_color_selector"
                    android:text="@string/import_stock"/>
            </com.sscf.investment.widget.BottomEditLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ocr_failed"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/orc_failed"
                android:drawablePadding="22dp"
                android:gravity="center_horizontal"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/default_text_color_60"
                android:layout_marginTop="98dp"
                android:text="@string/orc_failed"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/default_text_color_60"
                android:text="@string/orc_failed_sub"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>