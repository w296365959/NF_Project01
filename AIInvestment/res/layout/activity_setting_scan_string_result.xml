<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/setting_bg_style"
        android:orientation="vertical">
    <include
            layout="@layout/actionbar_setting"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:layout_marginLeft="@dimen/actionbar_margin"
                    android:layout_marginRight="@dimen/actionbar_margin"
                    android:text="@string/scan_string_result_tips"
                    android:textColor="@color/default_text_color_80"
                    android:textSize="@dimen/font_size_16"/>

            <TextView
                    android:id="@+id/resultContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="@dimen/actionbar_margin"
                    android:layout_marginRight="@dimen/actionbar_margin"
                    android:textColor="@color/default_text_color_80"
                    android:textSize="@dimen/font_size_16"/>
            <Button
                    android:id="@+id/duplicateButton"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="64dp"
                    android:layout_marginLeft="@dimen/actionbar_margin"
                    android:layout_marginRight="@dimen/actionbar_margin"
                    android:layout_marginBottom="@dimen/actionbar_margin"
                    android:background="?attr/scan_duplicate_button_bg"
                    android:textColor="?attr/scan_duplicate_button_text_color"
                    android:textSize="@dimen/font_size_18"
                    android:text="@string/duplicate"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
