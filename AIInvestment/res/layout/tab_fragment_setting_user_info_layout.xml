<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/null_bg_style"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:id="@+id/user_info_bg"
        android:background="@drawable/user_info_bg_drawable"
        android:paddingTop="@dimen/actionbar_height">
        <RelativeLayout
            android:id="@+id/settingUserInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.sscf.investment.setting.widgt.RoundImageView
                android:id="@+id/settingUserIcon"
                android:layout_width="@dimen/setting_user_icon_size"
                android:layout_height="@dimen/setting_user_icon_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/actionbar_margin"
                android:layout_marginRight="@dimen/actionbar_margin" />
            <ImageView
                android:id="@+id/iconV"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/user_icon_v"
                android:layout_alignRight="@id/settingUserIcon"
                android:layout_alignBottom="@id/settingUserIcon"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/vip_card"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="8dp"
                android:visibility="gone"
                android:background="@drawable/vip_card_black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/vip_card"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/settingUserIcon"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/settingNikename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:drawablePadding="@dimen/vip_drawable_padding"
                    android:textColor="@color/actionbar_title_text_color"
                    android:textSize="@dimen/font_size_16" />
                <TextView
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/actionbar_title_text_color"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>