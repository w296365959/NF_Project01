<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_bg_default"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <com.sscf.investment.splash.CountDownView
            android:id="@+id/splashSkipButton"
            style="@style/splash_count_down_view_style" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="125dp">

        <ImageView
            android:id="@+id/splash_bottom"
            android:layout_width="210dp"
            android:layout_height="92.5dp"
            android:layout_gravity="center"
            android:scaleType="fitXY" />
    </FrameLayout>

</LinearLayout>