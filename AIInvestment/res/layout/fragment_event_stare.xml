<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/stare_fragment_style">
    <!-- 公告研报 -->
    <TextView
        android:text="@string/announcement_research_report"
        style="@style/smart_stock_stare_item_title"/>
    <View style="@style/list_line_style" />
    <include
        android:id="@+id/new_announcement"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_smart_stock_stare_item_height"
        android:layout_marginTop="@dimen/setting_item_small_margin_top"
        layout="@layout/activity_smart_stock_stare_single_line_checkbox_item"/>
    <View style="@style/list_line_style" />
    <include
        android:id="@+id/research_report"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_smart_stock_stare_item_height"
        layout="@layout/activity_smart_stock_stare_single_line_checkbox_item"/>

    <View style="@style/list_line_style" />

    <!-- 持仓平均成本 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/holding_average_price"
            style="@style/smart_stock_stare_item_title"/>

        <ImageView
            android:id="@+id/help_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/help_icon_drawable"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"/>
    </LinearLayout>
    <View style="@style/list_line_style" />
    <include
        android:id="@+id/holding_price_above"
        layout="@layout/activity_portfolio_remind_edit_item" />
    <View
        style="@style/list_line_style"/>
    <include
        android:id="@+id/holding_price_below"
        layout="@layout/activity_portfolio_remind_edit_item" />
