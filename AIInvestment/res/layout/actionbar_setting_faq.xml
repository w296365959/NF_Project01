<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/actionbar_style"
    android:background="@color/dark_activity_bg">
    <ImageView
        android:id="@+id/actionbar_back_button"
        style="@style/actionbar_back_button_style"/>
    <TextView
        android:id="@+id/actionbar_title"
        style="@style/actionbar_title_text_style"/>

    <ImageView
        android:id="@+id/actionbar_setting_button"
        style="@style/actionbar_faq_style"
        android:src="@drawable/actionbar_setting"/>

    <ImageView
        android:id="@+id/actionbar_faq_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/actionbar_setting_button"
        android:src="@drawable/action_bar_faq_icon"
        android:layout_marginLeft="16dp"/>
</RelativeLayout>