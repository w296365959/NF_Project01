<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/default_content_margin"
        android:layout_marginRight="@dimen/default_content_margin">

        <LinearLayout
            android:id="@+id/brief_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/company_brief"
                    style="@style/finance_group_title"/>
            </LinearLayout>
            <View
                style="@style/list_line_style"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/intro_text_height">

                <TextView
                    android:text="@string/company_name"
                    style="@style/intro_title_style"/>
                <TextView
                    android:id="@+id/company_name"
                    style="@style/intro_content_style"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/intro_text_height">
                <TextView
                    android:text="@string/listing_date"
                    style="@style/intro_title_style"/>
                <TextView
                    android:id="@+id/company_listing_date"
                    style="@style/intro_content_style"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/intro_text_height">
                <TextView
                    android:text="@string/main_business"
                    style="@style/intro_title_style"
                    />
                <TextView
                    android:id="@+id/main_business"
                    style="@style/intro_content_style"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/intro_text_height">
                <TextView
                    android:text="@string/transfer_type"
                    style="@style/intro_title_style"
                    />
                <TextView
                    android:id="@+id/transfer_type"
                    style="@style/intro_content_style"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/intro_text_height">
                <TextView
                    android:text="@string/market_start_date"
                    style="@style/intro_title_style"
                    />
                <TextView
                    android:id="@+id/market_start_date"
                    style="@style/intro_content_style"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/intro_text_height">
                <TextView
                    android:text="@string/market_makers"
                    style="@style/intro_title_style"
                    />
                <TextView
                    android:id="@+id/market_makers"
                    style="@style/intro_content_style"
                    />
            </LinearLayout>

            <!-- 股本结构 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/company_structure"
                        style="@style/finance_group_title"/>
                </LinearLayout>
                <View
                    style="@style/list_line_style"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/intro_text_height">
                <TextView
                    android:text="@string/struct_total_share"
                    style="@style/intro_title_style"
                    />
                <TextView
                    android:id="@+id/struct_total_share"
                    style="@style/intro_content_style"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/intro_text_height">
                <TextView
                    android:text="@string/struct_circulating_stock"
                    style="@style/intro_title_style"
                    />
                <TextView
                    android:id="@+id/struct_circulating_stock"
                    style="@style/intro_content_style"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/intro_text_height">
                <TextView
                    android:text="@string/struct_circulating"
                    style="@style/intro_title_style"
                    />
                <TextView
                    android:id="@+id/struct_circulating"
                    style="@style/intro_content_style"
                    />
            </LinearLayout>

            <!--分红送配-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/company_bonus"
                    style="@style/finance_group_title"/>
            </LinearLayout>
            <View
                style="@style/list_line_style"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:text="@string/year"
                    style="@style/intro_incoming_name"
                    android:textColor="@color/default_text_color_60"/>
                <TextView
                    android:text="@string/intro_plan"
                    style="@style/intro_incoming_amount"
                    android:textColor="@color/default_text_color_60"
                    android:layout_width="192dp"/>
                <TextView
                    android:text="@string/exrights_date"
                    style="@style/intro_incoming_ratio"
                    android:textColor="@color/default_text_color_60"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/intro_bonus_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>