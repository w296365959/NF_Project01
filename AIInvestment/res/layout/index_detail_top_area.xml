<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/stock_detail_top_area_height"
    android:paddingTop="@dimen/stock_detail_top_area_marginTop">

    <include layout="@layout/top_area_price_layout"/>

    <ImageView
        android:id="@+id/help_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/default_content_margin"
        android:paddingRight="@dimen/default_content_margin"
        android:src="?attr/help_icon_drawable"
        android:visibility="gone"/>

</RelativeLayout>