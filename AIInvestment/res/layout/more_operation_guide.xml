<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/more_operation_guide_layout"
    style="@style/null_bg_style"
    android:clickable="true"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:gravity="center"
        android:text="@string/more_operation_guide"
        android:textColor="@color/white_100"
        android:textSize="@dimen/font_size_16"
        android:background="@drawable/red_guide_background"/>
    <ImageView
        android:layout_gravity="center"
        style="@style/guide_triangle_indicator_style"
        android:src="@drawable/guide_red_triangle_indicator" />
</LinearLayout>