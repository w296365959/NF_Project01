<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialog_layout_style"
    android:orientation="vertical">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scrollbars="none"
        android:id="@+id/scroll">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="11dp"
            android:layout_gravity="top">
            <TextView
                style="@style/dialog_stare_text_style"
                android:text="@string/dialog_stare_select_title"
                android:layout_marginLeft="@dimen/actionbar_margin"
                android:layout_marginRight="@dimen/actionbar_margin"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </ScrollView>
    <View style="@style/list_line_style"/>
    <Button
        style="@style/dialog_button_style"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/ok_button"
        android:text="@string/ok"/>
</LinearLayout>

