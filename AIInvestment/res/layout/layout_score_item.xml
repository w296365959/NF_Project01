<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/score_item_height"
    android:orientation="horizontal">
    <View
        style="@style/list_line_style"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/actionbar_margin"
        android:layout_marginRight="@dimen/score_item_icon_margin_right"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon"
        android:paddingRight="@dimen/actionbar_margin">
        <TextView android:id="@+id/title"
            style="@style/score_item_title_style"/>
        <TextView android:id="@+id/description"
            style="@style/score_item_description_style"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>