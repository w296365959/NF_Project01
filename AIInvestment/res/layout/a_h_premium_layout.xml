<com.sscf.investment.detail.view.AHPremiumLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ahLayout"
    android:layout_width="0dp"
    android:layout_height="30dp"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="?attr/usa_privatization_bg"
    android:visibility="invisible">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/default_text_color_100"
        android:textSize="@dimen/font_size_12"/>
    <com.sscf.investment.component.ui.widget.NumberTextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/default_text_color_100"
        android:textSize="@dimen/font_size_14"/>

    <com.sscf.investment.component.ui.widget.NumberTextView
        android:id="@+id/delta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/default_text_color_100"
        android:textSize="@dimen/font_size_14"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="溢价(H/A): "
        android:textColor="@color/default_text_color_100"
        android:textSize="@dimen/font_size_12"/>

    <TextView
        android:id="@+id/h_a_premium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@color/tab_indicatorColor"
        android:textSize="@dimen/font_size_12"/>
</com.sscf.investment.detail.view.AHPremiumLayout>