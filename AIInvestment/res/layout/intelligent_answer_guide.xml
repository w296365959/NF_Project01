<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intelligent_answer_guide_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right|top"
    android:layout_marginRight="8dp"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:clickable="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="176dp"
        android:src="@drawable/triangle_indicator"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rect_bg_intelligent_answer_guide"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="问股？来找晓智机器人"
            android:textColor="@color/white_100"
            android:textSize="@dimen/font_size_16"/>

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:background="@color/white_100"
            />

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="4dp"
            android:paddingRight="6dp"
            android:scaleType="center"
            android:src="@drawable/guide_close_icon"/>
    </LinearLayout>
</LinearLayout>