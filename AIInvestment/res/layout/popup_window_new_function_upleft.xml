<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guide_layout"
    style="@style/null_bg_style"
    android:clickable="true"
    android:paddingLeft="10dp"
    android:gravity="right"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rect_bg_intelligent_answer_guide"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/guide_title"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textColor="@color/white_100"
            android:textSize="@dimen/font_size_16" />
        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:background="@color/white_100" />
        <ImageView
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="4dp"
            android:paddingRight="6dp"
            android:scaleType="center"
            android:src="@drawable/guide_close_icon" />
    </LinearLayout>
    <ImageView
        android:id="@+id/triangleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/triangle_indicator_bottom" />
</LinearLayout>