<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="38dp">
    <com.sscf.investment.component.ui.widget.NumberTextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:id="@+id/no"
        android:text="--"
        android:minWidth="20dp"
        android:includeFontPadding="false"
        style="@style/industry_benchmark_item_text_style"/>
    <TextView
        android:layout_width="76dp"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:id="@+id/name"
        style="@style/industry_benchmark_item_text_style"
        android:layout_toRightOf="@id/no"/>
    <TextView
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:id="@+id/value"
        android:gravity="right|center_vertical"
        android:layout_alignParentRight="true"
        style="@style/industry_benchmark_item_text_style"/>
    <com.sscf.investment.detail.view.IndustryBenchmarkItemBar
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:id="@+id/bar"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/name"
        android:layout_toLeftOf="@id/value"/>
</RelativeLayout>