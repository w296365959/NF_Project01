<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:background="@drawable/list_item_bg"
              android:paddingLeft="@dimen/default_content_margin"
              android:paddingRight="@dimen/default_content_margin">

    <com.sscf.investment.widget.BoldTextView
        android:id="@+id/title"
        android:textColor="@color/default_text_color_100"
        android:textSize="@dimen/font_size_17"
        android:maxLines="2"
        android:lineSpacingExtra="1.5dp"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        />

    <TextView
        android:id="@+id/summary"
        android:textColor="@color/default_text_color_60"
        android:textSize="@dimen/font_size_14"
        android:maxLines="5"
        android:lineSpacingExtra="3dp"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp">

        <com.sscf.investment.widget.AttitudeColorView
            android:id="@+id/attitude_view"
            android:layout_width="@dimen/attitude_width"
            android:layout_height="@dimen/attitude_height"
            android:layout_alignParentLeft="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/attitude_view"
            android:gravity="right|center_vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/news_time"
                    android:textColor="@color/time_line_indicator_color"
                    android:textSize="@dimen/font_size_12"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tag_margin"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/news_source"
                    android:textColor="@color/time_line_indicator_color"
                    android:textSize="@dimen/font_size_12"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tag_margin"
                    android:ellipsize="end"
                    android:layout_toLeftOf="@id/news_time"/>
            </RelativeLayout>
            <!-- 专题tag -->
            <TextView
                android:id="@+id/tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="@string/market_info_tag_topic"
                android:textSize="@dimen/font_size_10"
                android:layout_marginLeft="@dimen/topic_tag_margin_left"
                android:textColor="@color/tab_indicatorColor"
                android:background="@drawable/tag_topic_round_rect_bg_position"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>