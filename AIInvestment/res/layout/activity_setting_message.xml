<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/setting_bg_style"
    android:orientation="vertical">
    <include layout="@layout/actionbar_setting" />
    <LinearLayout
        style="@style/portfolio_remind_item_style"
        android:layout_marginTop="@dimen/setting_item_small_margin_top">
        <TextView
            style="@style/setting_linear_layout_left_text_item_style"
            android:text="@string/setting_message_switch" />
        <CheckBox
            android:id="@+id/settingPushSwitch"
            style="@style/portfolio_remind_item_right_checkbox_style" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/settingMessageSubSwitchLayout"
        style="@style/null_bg_style"
        android:layout_marginTop="@dimen/setting_item_small_margin_top"
        android:orientation="vertical">
        <LinearLayout style="@style/portfolio_remind_item_style">
            <TextView
                style="@style/setting_linear_layout_left_text_item_style"
                android:text="@string/setting_push_important_news" />
            <CheckBox
                android:id="@+id/settingPushImportantNews"
                style="@style/portfolio_remind_item_right_checkbox_style" />
        </LinearLayout>
        <View style="@style/list_line_style" />
        <LinearLayout style="@style/portfolio_remind_item_style">
            <TextView
                style="@style/setting_linear_layout_left_text_item_style"
                android:text="@string/setting_push_new_shares" />
            <CheckBox
                android:id="@+id/settingPushNewShares"
                style="@style/portfolio_remind_item_right_checkbox_style" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>