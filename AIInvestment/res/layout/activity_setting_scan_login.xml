<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/null_bg_style"
        android:background="@color/main_bg_color"
        android:orientation="vertical">
    <ImageView
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/actionbar_margin"
            android:layout_gravity="right"
            android:src="@drawable/close_icon"/>
    <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"/>
    <TextView
            android:id="@+id/msg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/stock_stop_color_night"
            android:textSize="@dimen/font_size_16"/>
    <TextView
            android:id="@+id/msg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/gray_60"
            android:textSize="@dimen/font_size_12"/>
    <Button
            android:id="@+id/ok"
            style="@style/setting_button_style"
            android:layout_marginTop="74dp"
            android:text="@string/confirm_login"/>
    <TextView
            android:id="@+id/cancal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/actionbar_margin"
            android:layout_marginTop="36dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/cancel_login"
            android:textColor="@color/gray_80"
            android:textSize="@dimen/font_size_14"/>
</LinearLayout>
