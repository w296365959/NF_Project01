<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        style="@style/setting_bg_style">

    <include
            layout="@layout/actionbar_market"/>

    <LinearLayout
            style="@style/market_sub_title_layout_style">

        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="4dp"
                style="@style/market_list_header_text_style"
                android:text="@string/name_code"/>

        <TextView
                style="@style/market_list_header_text_style"
                android:text="@string/stock_list_head_new_price"/>

        <TextView
                style="@style/market_list_header_text_style"
                android:text="@string/stock_detail_turnover_rate"/>
    </LinearLayout>

    <View
            style="@style/list_line_style"/>

    <include
            layout="@layout/ptr_list"/>
</LinearLayout>