<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/setting_bg_style"
    android:orientation="vertical">
    <include
        layout="@layout/actionbar_setting_with_right_button"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/default_scrollview_style">
        <LinearLayout
            style="@style/main_bg_style"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/setting_item_small_margin_top"
            android:paddingLeft="@dimen/actionbar_margin"
            android:paddingRight="@dimen/actionbar_margin">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/default_text_color_100"
                android:textSize="@dimen/font_size_16"/>
            <View
                style="@style/list_line_style"/>
            <TextView
                android:id="@+id/intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/default_text_color_80"
                android:textSize="@dimen/font_size_14"
                android:text="@string/setting_magic_nine_intro_1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/default_text_color_80"
                android:textSize="@dimen/font_size_14"
                android:text="@string/setting_magic_nine_intro_2"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>