<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/default_list_item_style"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/yellow_point"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="#E86014"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvAnalaysisTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/default_text_color_60"/>
            <TextView
                android:id="@+id/tvAnalysisPdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/icon_file_pdf"
                android:drawablePadding="5dp"
                android:textSize="@dimen/font_size_12"
                android:text="@string/detail_secret_pdf"
                android:textColor="#1F7ADC"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAnalaysisTime"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:textColor="@color/default_text_color_100"
                android:textSize="@dimen/font_size_17"/>
            <TextView
                android:id="@+id/tvSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:layout_below="@id/title"
                android:layout_marginTop="5dp"
                android:textColor="@color/default_text_color_60"
                android:textSize="@dimen/font_size_14" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>