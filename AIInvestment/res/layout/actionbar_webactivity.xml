<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/actionbar_style">
    <ImageView
        android:id="@+id/actionbar_back_button"
        style="@style/actionbar_back_button_style" />
    <TextView
        android:id="@+id/actionbar_title"
        style="@style/actionbar_title_text_style"
        android:layout_centerVertical="true" />
    <com.sscf.investment.component.ui.widget.TwoTabSelectorView
        android:id="@+id/actionbar_webactivity_selector"
        android:layout_width="58dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/actionbar_margin"
        android:layout_marginRight="@dimen/actionbar_margin"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/actionbar_share"
        style="@style/actionbar_right_button_style"
        android:src="@drawable/actionbar_share_selector"
        android:visibility="gone" />
</RelativeLayout>