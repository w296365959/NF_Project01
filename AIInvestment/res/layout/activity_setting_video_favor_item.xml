<?xml version="1.0" encoding="utf-8"?>
<com.sscf.investment.information.view.VideoItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/actionbar_margin"
    android:paddingRight="@dimen/actionbar_margin"
    android:paddingTop="18dp"
    android:paddingBottom="18dp"
    android:id="@+id/favorItemLayout"
    android:background="@drawable/list_item_bg">
    <CheckedTextView
        android:id="@+id/favorCheckBox"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkMark="@drawable/checkbox_selector"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingRight="12dp"/>
    <com.sscf.investment.widget.CropView
        android:layout_width="160dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/favorCheckBox"
        android:id="@+id/image"/>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/favorCheckBox"
        android:background="@drawable/video_mask"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/image"
        app:layout_constraintRight_toRightOf="parent"
        android:ellipsize="end"
        android:layout_marginLeft="12dp"
        style="@style/live_item_title_style"
        android:singleLine="false"
        android:maxLines="2"
        android:gravity="left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/live_item_source_style"/>
</com.sscf.investment.information.view.VideoItemView>