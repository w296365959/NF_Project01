<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fail_retry"
    android:layout_width="match_parent"
    android:layout_height="@dimen/article_listview_itemHeight"
    android:minHeight="@dimen/article_listview_itemHeight"
    android:background="@color/default_content_bg"
    >
    <View
        android:id="@+id/line"
        style="@style/list_line_style"
        android:visibility="invisible"/>
    <TextView
        android:text="@string/fail_retry"
        android:textColor="@color/default_text_color_60"
        android:textSize="@dimen/font_size_12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        />
</FrameLayout>
