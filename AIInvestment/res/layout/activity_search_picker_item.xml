<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/default_list_item_style"
    android:gravity="center_vertical"
    android:padding="0dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tag"
        android:layout_width="36dp"
        android:layout_height="18dp"
        android:layout_marginLeft="@dimen/actionbar_margin"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@drawable/tag_round_rect_bg_search"
        android:textColor="#ff9c6c"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/code"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/default_text_color_100"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/name"
        style="@style/horizontal_average_divide_style"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/default_text_color_100"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/notSupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/actionbar_margin"
        android:layout_gravity="center_vertical"
        android:visibility="invisible"
        android:textColor="@color/default_text_color_60"
        android:textSize="@dimen/font_size_14"
        android:text="@string/not_support"/>
</LinearLayout>